<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.layout.ToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:navigationIcon="@drawable/ic_oui_back"
    app:subtitle="@string/app_name"
    app:title="@string/boot_animation_title"
    android:id="@+id/toolbar_layout"
    tools:context=".activities.SystemBootAnimationActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Description TextView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/boot_animation_description"
                android:textSize="16sp"
                android:textColor="@color/secondary_text_icon_color"
                android:layout_marginBottom="16dp" />

            <!-- Boot Samsung Section -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/oui_background_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:src="@drawable/upload_cloudc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_boot_samsung"
                            android:textSize="18sp"
                            android:textColor="@color/oui_primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/boot_samsung_description"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_icon_color" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Button to upload Boot Samsung -->
                <Button
                    android:id="@+id/buttonUploadBootsamsung"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/choose_file"
                android:backgroundTint="@color/primary_color_themed"
                android:padding="8dp" />

                <!-- Filename indicator for Boot Samsung -->
                <TextView
                    android:id="@+id/filenameBootsamsung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_file_none"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_icon_color"
                android:visibility="gone" />
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <!-- Boot Samsung Loop Section -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/oui_background_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:src="@drawable/upload_cloudc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_boot_samsung_loop"
                            android:textSize="18sp"
                            android:textColor="@color/oui_primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/boot_samsung_loop_description"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_icon_color" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Button to upload Boot Samsung Loop -->
                <Button
                    android:id="@+id/buttonUploadBootsamsungloop"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/choose_file"
                android:backgroundTint="@color/primary_color_themed"
                android:padding="8dp" />

                <!-- Filename indicator for Boot Samsung Loop -->
                <TextView
                    android:id="@+id/filenameBootsamsungloop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_file_none"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_icon_color"
                android:visibility="gone" />
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <!-- Shutdown Samsung Section -->
            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/oui_background_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:src="@drawable/upload_cloudc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_shutdown_samsung"
                            android:textSize="18sp"
                            android:textColor="@color/oui_primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shutdown_samsung_description"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_icon_color" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Button to upload Shutdown Samsung -->
                <Button
                    android:id="@+id/buttonUploadShutdownsamsung" 
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/choose_file"
                android:backgroundTint="@color/primary_color_themed"
                android:padding="8dp" />

                <!-- Filename indicator for Shutdown Samsung -->
                <TextView
                    android:id="@+id/filenameShutdownsamsung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_file_shutdown"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:textColor="@color/secondary_text_icon_color" />
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <!-- Apply Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/button_apply"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/apply"
                    android:backgroundTint="@color/secondary_text_icon_color"
                    android:padding="8dp"
                    android:enabled="false"
                    android:layout_marginHorizontal="16dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</dev.oneuiproject.oneui.layout.ToolbarLayout>
