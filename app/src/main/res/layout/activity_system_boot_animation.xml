<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.layout.ToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:navigationIcon="@drawable/ic_oui_back"
    app:subtitle="@string/app_name"
    app:title="Boot Animation"
    android:id="@+id/toolbar_layout"
    tools:context=".activities.SystemBootAnimationActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="These animations will appear after the Galaxy Note 20 boot screen."
                android:textSize="16sp"
                android:textColor="@color/secondary_text_icon_color"
                android:layout_marginBottom="16dp" />

            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/oui_background_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bootsamsung_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:src="@drawable/upload_cloudc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Boot Samsung (.qmg file)"
                            android:textSize="18sp"
                            android:textColor="@color/oui_primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Animation that plays before Samsung Loop. Only plays once."
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_icon_color" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_upload_bootsamsung"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Choose File"
                    android:backgroundTint="@color/primary_color_themed"
                    android:padding="8dp" />

                <!-- Filename indicator for Boot Samsung -->
                <TextView
                    android:id="@+id/filename_bootsamsung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected file: None"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_icon_color"
                    android:visibility="gone" />
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/oui_background_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/bootsamsungloop_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:src="@drawable/upload_cloudc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Boot Samsung Loop (.qmg file)"
                            android:textSize="18sp"
                            android:textColor="@color/oui_primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This animation plays continuously until the phone is booted"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_icon_color" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_upload_bootsamsungloop"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Choose File"
                    android:backgroundTint="@color/primary_color_themed"
                    android:padding="8dp" />

                <!-- Filename indicator for Boot Samsung Loop -->
                <TextView
                    android:id="@+id/filename_bootsamsungloop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected file: None"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_icon_color"
                    android:visibility="gone" />
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <dev.oneuiproject.oneui.widget.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/oui_background_color"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/shutdownsamsung_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:src="@drawable/upload_cloudc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Shutdown Samsung (.qmg file)"
                            android:textSize="18sp"
                            android:textColor="@color/oui_primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Animation that is shown when powering off the phone"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text_icon_color" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_upload_shutdownsamsung"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Choose File"
                    android:backgroundTint="@color/primary_color_themed"
                    android:padding="8dp" />

                <!-- Filename indicator for Shutdown Samsung -->
                <TextView
                    android:id="@+id/filename_shutdownsamsung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected file: shutdown_animation.qmg"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:textColor="@color/secondary_text_icon_color" />
            </dev.oneuiproject.oneui.widget.RoundLinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/button_apply"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:backgroundTint="@color/secondary_text_icon_color"
                    android:padding="8dp"
                    android:enabled="false"
                    android:layout_marginHorizontal="16dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</dev.oneuiproject.oneui.layout.ToolbarLayout>
